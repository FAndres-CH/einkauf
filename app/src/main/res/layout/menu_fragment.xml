<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".menuFragment" >

    <ImageView
        android:id="@+id/image_view_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginTop="50dp"
        android:alpha="0.95"
        android:baselineAlignBottom="false"
        android:fadingEdge="horizontal|vertical"
        android:scaleType="fitXY"
        android:src="@drawable/gradient" />

    <TextView
        android:id="@+id/txtViewMenueTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left"
        android:layout_marginTop="80px"
        android:layout_marginLeft="10px"
        android:alpha="0.7"
        android:background="#BEBEBE"
        android:text=""
        android:textColor="@android:color/black"
        android:textSize="60px"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/txtViewMenueKueche"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left"
        android:layout_marginTop="660px"
        android:layout_marginLeft="10px"
        android:alpha="0.7"
        android:background="#BEBEBE"
        android:text=""
        android:textColor="@android:color/black"
        android:textSize="40px"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/txtViewMenueArt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left"
        android:layout_marginTop="710px"
        android:layout_marginLeft="10px"
        android:alpha="0.7"
        android:background="#BEBEBE"
        android:text=""
        android:textColor="@android:color/black"
        android:textSize="40px"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txtViewMenueZutaten"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left"
        android:layout_marginLeft="15px"
        android:layout_marginTop="780px"
        android:alpha="0.7"
        android:background="#BEBEBE"
        android:scrollIndicators="right"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:text=""
        android:textColor="@android:color/black"
        android:textSize="40px" />


</FrameLayout>